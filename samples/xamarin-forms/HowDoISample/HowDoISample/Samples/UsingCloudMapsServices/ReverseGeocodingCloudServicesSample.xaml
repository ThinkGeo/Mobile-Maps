    <ContentPage.Content>
        <StackLayout>
            <Expander>
                <!-- Sample Description -->
                <Expander.Header>
                    <StackLayout Orientation="Horizontal" Padding="8">
                        <Label Text="This is a sample description that needs to be replaced once the template is copied"
                               FontSize="Subtitle"
                               VerticalOptions="Center"
                               HorizontalOptions="StartAndExpand"/>
                        <BoxView Color="LightGray"
                                 WidthRequest="1"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center"/>
                        <Image Source="chevron_down.png" HeightRequest="44" VerticalOptions="Start" HorizontalOptions="End">
                            <Image.Triggers>
                                <DataTrigger TargetType="Image"
                                             Binding="{Binding Source={RelativeSource AncestorType={x:Type Expander}}, Path=IsExpanded}"
                                             Value="True">
                                    <Setter Property="Rotation"
                                            Value="180"/>
                                </DataTrigger>
                            </Image.Triggers>
                        </Image>
                    </StackLayout>
                </Expander.Header>

                <!-- Sample Controls -->
                <Expander.Content>
                    <Grid Grid.Column="1" Grid.Row="0">
                        <Label Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Text="Click on the Map or Enter a Location to Reverse Geocode"></Label>
                        <Label Grid.Column="1" Grid.Row="1" FontSize="14">Location:</Label>
                        <Entry Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" x:Name="txtCoordinates" Text="3915241.03,-10779570.57"></Entry>
                        <Label Grid.Column="1" Grid.Row="3" FontSize="14">Search Radius:</Label>
                        <Entry Grid.Column="2" Grid.Row="3" x:Name="txtSearchRadius" Text="400"></Entry>
                        <Label Grid.Column="1" Grid.Row="4" FontSize="14">Maximum Results:</Label>
                        <Entry Grid.Column="2" Grid.Row="4" x:Name="txtMaxResults" Text="10"></Entry>
                        <Label Grid.Column="1" Grid.Row="5" FontSize="14">Categories:</Label>
                        <Picker Grid.Column="2" Grid.Row="5" x:Name="cboLocationCategories" SelectedIndexChanged="cboLocationType_SelectionChanged">
                            <Picker.ItemsSource>
                                <x:String>All</x:String>
                                <x:String>Common</x:String>
                                <x:String>None</x:String>
                            </Picker.ItemsSource>
                        </Picker>
                        <Label Grid.Column="1"  Grid.Row="6" Grid.ColumnSpan="2" x:Name="txtLocationCategoriesDescription"></Label>
                        <Button Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2" Clicked="Search_Click" Text="Search"></Button>
                        <Label Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="2" x:Name="txtSearchResultsBestMatch"></Label>
