<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:ThinkGeoUI="clr-namespace:ThinkGeo.UI.XamarinForms;assembly=ThinkGeo.UI.XamarinForms"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ThinkGeo.UI.XamarinForms.HowDoI.GetFeaturesWithinDistanceSample">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Padding="8">
                <Label x:Name="descriptionLabel"
                               FontSize="Subtitle"
                               VerticalOptions="Center"
                               HorizontalOptions="StartAndExpand" />
            </StackLayout>

            <ThinkGeoUI:MapView x:Name="mapView" VerticalOptions="FillAndExpand" MapSingleTap="MapView_OnMapClick" />
            <StackLayout Orientation="Horizontal" Margin="10,0,10,20" VerticalOptions="End"  BackgroundColor="#80777777">
                <Slider x:Name="searchRadius" Maximum="1600" Minimum="100" Value="400" HorizontalOptions="FillAndExpand"/>
                <Label BindingContext="{x:Reference Name=searchRadius}"
                           Text="{Binding Path=Value, StringFormat='{0} m'}"  />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>