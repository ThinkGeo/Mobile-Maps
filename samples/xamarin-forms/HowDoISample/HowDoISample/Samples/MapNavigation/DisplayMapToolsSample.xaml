<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:ThinkGeoUI="clr-namespace:ThinkGeo.UI.XamarinForms;assembly=ThinkGeo.UI.XamarinForms"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="http://xamarin.com/schemas/2020/toolkit"
             mc:Ignorable="d"
             x:Class="ThinkGeo.UI.XamarinForms.HowDoI.DisplayMapToolsSample"
             x:Name="mapPage">

    <ContentPage.BindingContext>
        <x:Reference Name="mapPage"/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <views:Expander IsExpanded="True">
                <!-- Sample Description -->
                <views:Expander.Header>
                    <StackLayout Orientation="Horizontal" Padding="8">
                        <Label x:Name="descriptionLabel"
                               FontSize="Subtitle"
                               VerticalOptions="Center"
                               HorizontalOptions="StartAndExpand" />
                    </StackLayout>
                </views:Expander.Header>
            
            </views:Expander>

            <Grid  VerticalOptions="FillAndExpand" >
                <ThinkGeoUI:MapView x:Name="mapView" VerticalOptions="FillAndExpand" MapUnit="Meter" />

                <StackLayout InputTransparent="True" CascadeInputTransparent="False" Margin="20" HorizontalOptions="Start" VerticalOptions="End">
                    <StackLayout Orientation="Horizontal" HeightRequest="20">
                        <CheckBox IsChecked="{Binding DisplayCoordinate}"></CheckBox>
                        <Label>Display Coordinate</Label>
                    </StackLayout>
                </StackLayout>

                <StackLayout InputTransparent="True" CascadeInputTransparent="False" Margin="20" HorizontalOptions="End" VerticalOptions="End">
                    <StackLayout Orientation="Horizontal" HeightRequest="20">
                        <CheckBox IsChecked="{Binding DisplayZoomBar}"></CheckBox>
                        <Label>Display ZoomBar </Label>
                    </StackLayout>
                </StackLayout>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>