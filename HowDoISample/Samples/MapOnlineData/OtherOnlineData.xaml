<howDoI:SamplePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:thinkgeo="clr-namespace:ThinkGeo.UI.Maui;assembly=ThinkGeo.UI.Maui"
                   xmlns:howDoI="using:HowDoISample"
                   x:Class="HowDoISample.MapOnlineData.OtherOnlineData">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <howDoI:DescriptionView Grid.Row="0"
                    Description="{Binding Description, Source={x:Reference BasePage}}"  />

            <Label Grid.Row="1" 
                   VerticalTextAlignment="Center"  
                   HorizontalOptions="Center"
                   Text="The following Map Providers are supported as well with the right key: &#x0a;
                    &#x0a;
                   ArcGisServerRest &#x0a;
                   BingMaps &#x0a;
                   GoogleMaps &#x0a;
                   HereMapsRaster &#x0a;
                   MapBoxStaticTiles &#x0a;
                   More through Customized Layer
                   "
                   LineBreakMode="WordWrap"  FontSize="20"/>
        </Grid>
    </ContentPage.Content>
</howDoI:SamplePage>