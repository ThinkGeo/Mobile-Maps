<howDoI:SamplePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:thinkgeo="clr-namespace:ThinkGeo.UI.Maui;assembly=ThinkGeo.UI.Maui"
                   xmlns:howDoI="using:HowDoISample"
                   x:Class="HowDoISample.VectorDataGeometricOperation.CalculateArea">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>                
            </Grid.RowDefinitions>

            <StackLayout  Grid.Row="0" Orientation="Vertical" Padding="8">
                <howDoI:DescriptionView
                    Description="{Binding Description, Source={x:Reference BasePage}}" />
                <StackLayout Orientation="Horizontal">
                    <Label Text="Area (sq km):" FontAttributes="Bold" VerticalOptions="Center" />
                    <Label x:Name="AreaResult" FontAttributes="Bold" VerticalOptions="Center"
                           Margin="15,0,0,0" />
                </StackLayout>
            </StackLayout>
            
            <thinkgeo:MapView Grid.Row="1" x:Name="MapView" MapUnit="Meter" 
                              SizeChanged="MapView_OnSizeChanged" />
        </Grid>
    </ContentPage.Content>
</howDoI:SamplePage>